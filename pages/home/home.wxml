<view class="home-container">
  <scroll-view class="todoList" scroll-y="true">
    <view class="item" wx:for="{{lists}}" wx:key="{{item.id}}">
      <view class="select {{item.finished && 'active'}}"></view>
      <text>{{item.text}}</text>
    </view>
  </scroll-view> 
  <g-button text="创建任务" type="change" class="createButton" bindtap="showConfirm"></g-button>
  <view class="tomato-wrapper">
    <view class="tomato">
      <g-clock text="设定闹钟⏰"></g-clock>
    </view>
  </view>
  <g-confirm placeholder="balabala" bindconfirm="confirmCreate" bindcancel="hideConfirm" visible="{{visibleConfirm}}"></g-confirm>    
</view>